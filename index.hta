<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dependency Manager</title>
    <HTA:APPLICATION
        ID="app"
        APPLICATIONNAME = "Dependency Manager"
        SCROLL="no"
        SINGLEINSTANCE="yes"
        SYSMENU="yes"
        WINDOWSTATE="normal"
    />
    <link rel="stylesheet" type="text/css" href="style.css">
    <script language="javascript" src="script.js"></script>
</head>

<body>
    <div>
        <label for="filterInput">Filter:</label>
        <input type="text" id="filterInput" onkeyup="loadFileList()" disabled>
        <button class="btn" onclick="refreshDepList()">Reload Files</button>
    </div>
    
    <div>
        <label class="filter-input" for="fileList">Files:</label><br/>
        <div class="dep-list-container">
            <select class="dep-list" id="fileList" size="10" style="width: 99%;" onclick="selectFileFromList()"></select>
        </div>
    </div>

    <div>
        <label for="filePathInput">File Name:</label>
        <input type="text" id="filePathInput">
    </div>

    <div>
        <button class="btn" onclick="loadFile()">Load File</button>
        <button class="btn" onclick="saveFile()">Save File</button>
        <button class="btn" onclick="generateNewFile()">Create New</button>
    </div>

    <textarea class="content-box" id="editor"></textarea>
</body>
</html>