<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dependency Manager</title>
    <HTA:APPLICATION
        ID="app"
        APPLICATIONNAME = "Dependency Manager"
        SCROLL="no"
        SINGLEINSTANCE="yes"
        SYSMENU="yes"
        WINDOWSTATE="normal"
    />
    <link rel="stylesheet" type="text/css" href="style.css">
    <script language="javascript" src="script.js"></script>
</head>

<body>
    <div>
        
    </div>
    
    <div class="dep-container">
        <div class="dep-list-container">
            <label class="filter-input" for="fileList">Files:</label><br/>
            <div class="dep-list">
                <select class="dep-items" id="fileList" size="10" style="width: 99%;" onclick="selectFileFromList()"></select>
            </div>
        </div>
        <div class="dep-action-container">
            
            <label for="filterInput">Filter:</label><br/>
            <input type="text" id="filterInput" onkeyup="loadFileList()" disabled><br/>
            <button class="btn" onclick="refreshDepList()">Reload Files</button><br/>

            <label for="filePathInput">File Name:</label><br/>
            <input type="text" id="filePathInput"><br/>

            <button class="btn" onclick="loadFile()">Load File</button>
            <button class="btn" onclick="saveFile()">Save File</button>
            <button class="btn" onclick="generateNewFile()">Create New</button>
        </div>
    </div>

    <div class="">
        <button id="selectModeBtn" class="dep-toggle toggle-off" onclick="toggleMode('select')">Select Mode</button>
        <button id="editModeBtn" class="dep-toggle toggle-on" onclick="toggleMode('edit')">Edit Mode</button>

 
    </div>

    <div id="editMode" class="edit-mode">
        <textarea class="content-box" id="editor"></textarea>
    </div>

    <div id="selectMode" class="select-mode hidden">
        <div class="dep-options">

        <label for="option1">Dep-Options:</label>
        <select name="option1" id="option1">
            <option value="option1_1">option1_1</option>
            <option value="option1_2">option1_2</option>
            <option value="option1_3">option1_3</option>
        </select>

        <label for="option2">Dep-Options:</label>
        <select name="option2" id="option2">
            <option value="option2_1">option2_1</option>
            <option value="option2_2">option2_2</option>
            <option value="option2_3">option2_3</option>
        </select>

        <label for="option3">Dep-Options:</label>
        <select name="option3" id="option1">
            <option value="option3_1">option3_1</option>
            <option value="option3_2">option3_2</option>
            <option value="option3_3">option3_3</option>
        </select>

        <label for="option4">Dep-Options:</label>
        <input type="text" id="option4" name="option4">
        </div>

        <label for="option5">Dep-Options:</label>
        <input type="text" id="option5" name="option5">

        <label for="option6">Dep-Options:</label>
        <input type="text" id="option6" name="option6">
        
        </div>
    </div>
</body>
</html>