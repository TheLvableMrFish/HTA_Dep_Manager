<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dependency Manager</title>
    <HTA:APPLICATION
        ID="app"
        APPLICATIONNAME = "Dependency Manager"
        SCROLL="no"
        SINGLEINSTANCE="yes"
        SYSMENU="yes"
        WINDOWSTATE="normal"
    />
    <link rel="stylesheet" type="text/css" href="style.css">
    <script language="javascript" src="script.js"></script>
</head>

<body>
    <h3>File Editor</h3>

    <div>
        <label for="filterInput">Filter:</label>
        <input type="text" id="filterInput" onkeyup="loadFileList()">
        <button onclick="refreshDepList()">Reload Files</button>
    </div>
    
    <div>
        <label for=fileList">Files:</label><br/>
        <select id="fileList" size="10" style="width: 80%;" onclick="selectFileFromList()"></select>
    </div>

    <div>
        <label for="filePathInput">File Name:</label>
        <input type="text" id="filePathInput">
    </div>

    <div>
        <button onclick="loadFile()">Load File</button>
        <button onclick="saveFile()">Save File</button>
        <button onclick="generateNewFile()">Create New</button>
    </div>

    <textarea class="content-box" id="editor"></textarea>
</body>
</html>